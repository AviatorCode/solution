<%- include('../partials/header') %>
<h1>New Clucks</h1>
<form method="POST" action="/clucks">
 
    <div class="form-group">
        <input 
            type="url" 
            name="image_url" 
            class="form-control" 
            placeholder="e.g. http://imgur.com/myPic.jpg"
        >
    </div>
    <div class="form-group">
        <textarea 
            class="form-control"
            name="content" 
            placeholder="Whatchoo cluckin bout?"
        ></textarea>
    </div>
    <input type="submit" class="btn btn-outline-success" value="Cluck!">
</form>
